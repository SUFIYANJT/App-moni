<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="progressBar">
        <item name="indicatorColor">@color/white</item>
        <item name="trackColor">@color/darkBackground</item>
    </style>
    <style name="ActivityMain">
        <item name="background">@color/white</item>
        <item name="iconTint">@color/darkBackground</item>
        <item name="android:textColor">@color/darkBackground</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="Cantainer" >
        <item name="android:background">@color/darkLight</item>
        <item name="android:textColor">@color/lightDark</item>
    </style>
    <style name="CardViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/cardview_light_background</item>
    </style>
    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
